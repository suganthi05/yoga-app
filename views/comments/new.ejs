<% include ../partials/header %>
<div class="row top-space">
    <h1 style="text-align: center">Add New Review to
        <%= yoga.name %>
    </h1>
    <div class="list-group-item" style="width: 30%; margin: 25px auto;">
        <form action="/yoga/<%= yoga._id %>/comments" method="POST">

            <div class="form-group form-width">
                <label> Your Review: </label>
                <textarea class="form-control form-height" rows="5" name="comment[text]" placeholder="Review Here" autofocus="true"></textarea>
                <label> Your Rating: </label>
                <input class="form-control form-height" type="number" min="1" max="5" name="rating" placeholder="Rating">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a class="go-back" href="/yoga">Go Back</a>
    </div>
</div>
